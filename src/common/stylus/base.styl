body,html
  line-height: 1
  font-weight: 200
  font-family 'PingFang SC','STheitiSC-Light','Helvetica-Light',Arial,"Microsoft YaHei",sans-serif


@media (-webkit-min-device-pixel-ratio: 1.5)
  .boder-1px
    &::after
      -webkit-transform :scaleY(0.7)
      transform :scaleY(0.7)

@media (-webkit-min-device-pixel-ratio: 2)
  .boder-1px
    &::after
      -webkit-transform :scaleY(0.5)
      transform :scaleY(0.5)

.clearfix
  display: inline-block
  &:after
    display: block
    content ""
    height: 0
    line-height: 0
    clear both
    visibility hidden
